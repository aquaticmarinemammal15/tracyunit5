def draw_textbox(label, y_location):
    goto(-50, y_location)
    write(label, font=("Arial", 15, "bold"), align="right")
    pendown()
    for i in range(2):
        forward(200)
        left(90)
        forward(25)
        left(90)
    penup()
    goto(-40, y_location + 5)
    
def draw_availability(label, y_location):
    goto(60, y_location)
    write(label, font=("Arial", 15), align="right")
    pendown()
    for i in range(2):
        forward(50)
        left(90)
        forward(25)
        left(90)
    penup()
    goto(80, y_location + 5)
    

bgcolor("#D9E7EB")
speed(0)
penup()
print("Welcome to the volunteer sign up form.")
draw_textbox("Name: ", 150)
name = input("Enter your name: ")
write(name, font=("Arial", 15))
name_msg = "Nice to meet you, {}.\n"
print(name_msg.format(name))
draw_textbox("Date: ", 100)
date = input("Enter today's date: ")
write(date, font=("Arial", 15))
print("\nYou must be in middle or high school to voluneer.")
draw_textbox("Grade: ", 50)
grade = input("Enter your grade: ")
write(grade + "th", font=("Arial", 15))
grade_msg = "I see that you are in {}th grade. Great!\n"
print(grade_msg.format(grade))
goto(-150, 0)
pendown()
pensize(5)
forward(300)
penup()
pensize(1)
goto(0, -50)
write("Availability:", font=("Arial", 20, "bold"), align="center")
print("Now let's look at your availability. Enter Y if you are available during the given time and N if you are not.")
draw_availability("Saturday morning: ", -90)
sat_morn = input("Are you available Sat mornings? (Y/N): ")
write(sat_morn, font=("Arial", 15))
draw_availability("Saturday afternoon: ", -120)
sat_aft = input("Are you available Sat afternoons? (Y/N): ")
write(sat_aft, font=("Arial", 15))
draw_availability("Sunday morning: ", -150)
sun_morn = input("Are you available Sun mornings? (Y/N): ")
write(sun_morn, font=("Arial", 15))
draw_availability("Sunday afternoon: ", -180)
sun_aft = input("Are you available Sun afternoons? (Y/N): ")
write(sun_aft, font=("Arial", 15))
goto(200, 200)
thankyou_msg = "Awesome, thank you for filling out the volunteer form, {}."
print(thankyou_msg.format(name))
print("We will be in touch.")
