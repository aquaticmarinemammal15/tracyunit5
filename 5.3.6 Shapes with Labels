circle_color = "red"
circle_radius = 50
square_color = "blue"
square_width = circle_radius * 2
speed(0)
penup()
goto(-100,0)
color("red")
pendown()
begin_fill()
circle(50)
end_fill()
color("black")
penup()
goto(-100,-10)
pendown()
write("red circle with radius of 50", align="center")

penup()
goto(50,0)
color("blue")
begin_fill()
for i in range(4):
    forward(100)
    left(90)
end_fill()

goto(100,-10)
color("black")
write("blue square with width of 100", align="center")
