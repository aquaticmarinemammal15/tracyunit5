penup()
def draw_circle():
    goto(0, 0)
    
    goto(0,-75)
    outside_circle_color = input("Outside color?: ")
    color(outside_circle_color)
    pendown()
    begin_fill()
    circle(100)
    end_fill()
    penup()

    goto(0,-50)
    outer_circle_2_color = input("Outer circle #2 color?: ")
    color(outer_circle_2_color)
    pendown()
    begin_fill()
    circle(75)
    end_fill()
    penup()

    goto(0,-25)
    outside_circle_3_color = input("Outer circle #3 color?: ")
    color(outside_circle_3_color)
    pendown()
    begin_fill()
    circle(50)
    end_fill()
    penup()
    goto(0,0)
    inner_circle_color = input("Inner circle color?: ")
    color(inner_circle_color)
    pendown()
    begin_fill()
    circle(25)
    end_fill()
    penup()
draw_circle()
